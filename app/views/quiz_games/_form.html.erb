<%= form_with scope: :quiz_game,
							url: local_assigns["url"],
							method: :patch,
							html: { class: "quiz_game_edit_form" },
							data: { client_id: local_assigns["client_id"] }	do |form| %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, {autofocus: true, value: local_assigns["config_params"]["name"]} %>
  </div>

  <div>
    <% ["first", "second", "third"].each do |type| %>
      <%= form.radio_button :questions_source, type, checked: local_assigns["config_params"]["questions_source"] == type || false %>
      <%= form.label "questions_source#{type}", type %>
      <br/>
    <% end %>

  </div>

  <div>
    <%= form.submit "Start game" %>
  </div>

<% end %>
<hr/>
<div>local_assigns: <%= local_assigns %></div>
<hr/>
