<%= form_for user do |f| %>
  <% if user.errors.any? %>
    <div>
      <%= user.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

	<%= f.label :name %>
  <%= f.text_field :name, { autofocus: true } %>
	<br>
	<%= f.label :password %>
  <%= f.password_field :password %>
	<br>
  <%= f.submit 'Save' %>
<% end %>